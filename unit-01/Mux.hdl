/** 
 * Multiplexor:
 * out = a if sel == 0
 *       b otherwise
 */

CHIP Mux {
    IN a, b, sel;
    OUT out;

    PARTS:
    Not (in = sel, out = w1);
    And (a = w1, b = a, out = w2);
    And (a = sel, b = b, out = r2);
    Or (a = w2, b = r2, out = out);

}